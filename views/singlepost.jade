extends layout

block content
    main
        section
            .blog-page
                .container-fluid
                    .container
                        .row
                            .col-xs-12
                                h1 Welcome to our blog
                            .row
                                .col-xs-12
                                    .category-list
                                        .category-list
                                            if categories
                                                for category in categories
                                                    ul
                                                        li
                                                            a(href='#')=category.category
                            .row.newsletter
                                .col-xs-12
                                    .newsletter-content.hidden-sm.hidden-xs
                                        form
                                            input(type='email', placeholder='Enter your request')
                                            a.btn-biger(href='#') Search
                                    .social-icons.visible-sm.visible-xs
                                        ul
                                            li
                                                a(href='#')
                                                    i.fa.fa-facebook-square(aria-hidden='true')
                                            li
                                                a(href='#')
                                                    i.fa.fa-twitter-square(aria-hidden='true')
                                            li
                                                a(href='#')
                                                    i.fa.fa-pinterest-square(aria-hidden='true')
                                            li
                                                a(href='#')
                                                    i.fa.fa-google-plus-square(aria-hidden='true')

                        .row.blog-content
                            .col-lg-9.col-md-12
                                .row

                                    .col-md-2.col-sm-2.col-lg-2.hidden-xs.left-blok
                                        .day #{moment(post.date).format("DD")}
                                        .month #{moment(post.date).format("MMM")}
                                        .reviews 120 reviews
                                        .comments 3 comments
                                        .share Share  article
                                    .col-md-10.col-lg-10.col-sm-10.middle-block
                                        .blog-tags
                                            i.fa.fa-tags(aria-hidden='true')=post.category
                                        img(src='/uploads/#{post.mainimage}', alt='')
                                        .row.visible-xs.left-blok
                                            .col-xs-6
                                                .day 23
                                                .month June
                                            .col-xs-6
                                                .reviews 120 reviews
                                                .comments 3 comments
                                                .share Share  article
                                        h4=post.title
                                        p!=post.post
                                        hr
                                        if comments
                                            h3 Comments
                                            for comment in comments
                                                .comment
                                                    p.comment-name #{comment.name}
                                                    p.comment-body #{comment.comment}
                                            br
                                        else
                                            h3 Posts not found
                                    h3 Add Comment
                                    if errors
                                        ul.errors
                                            each error, i in errors
                                                li.alert.alert-danger #{error.msg}
                                    form.comment-form(method='post', action='/posts/addcomment')
                                        input(name='postid', type='hidden', value='#{post._id}')
                                        .form-group
                                            label Name
                                            input.form-control(type='text', name='name', required)
                                        .form-group
                                            label Email
                                            input.form-control(type='text', name='email', required)
                                        .form-group
                                            label Body
                                            textarea.form-control(type='text', name='comment', required)
                                        br
                                        input.btn.btn-default(type='submit', name='submit', value='Add Comment')



